<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lista_aluno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rodrigodiego.cadastroaluno.ListaAlunoActivity">

    <EditText
        android:id="@+id/edNomeListagem"
        android:layout_width="match_parent"
        android:hint="@string/nome_aluno"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btAddListagem"
        android:text="@string/add_aluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ListView
        android:id="@+id/lvListagem"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
</LinearLayout>
